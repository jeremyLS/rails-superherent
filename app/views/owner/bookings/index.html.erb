<div class="tabs">
  <%= link_to 'My Bookings', bookings_path %>
  <%= link_to 'My Super Heros', owner_superheroes_path %>
  <%= link_to 'My Validations', owner_bookings_path, class:'tabs active'  %>
</div>

<div class="container-bookings owner-validation">
  <h2>DashBoard</h2>
  <% if @bookings == [] %>
    <h4><%= "You have no validation yet" %></h4>
  <% else %>
    <h4><%= @bookings.count %> pending validation(s)</h4>
    <% @bookings.each do |booking| %>
      <div class="card-owner">
        <%= cl_image_tag booking.renter.photo, height: 75, width: 75, crop: :fill, class: 'avatar-medium' %>
        <p class="flex-body", style="font-weight: lighter;">
          <%= booking.renter.name.capitalize %> wants to rent <%= booking.superhero.name %> for "<%= booking.purpose %>"
        </p>
        <div class="row">
          <div class="col-xs-6">
            <%= link_to validate_owner_booking_path(booking), method: :patch, class:'btn btn-valid btn-success' do %>
              <i class="fa fa-check"></i>
            <% end %>
          </div>
          <div class="col-xs-6">
            <%= link_to decline_owner_booking_path(booking), method: :patch, class:'btn btn-valid btn-danger' do %>
              <i class="fa fa-times"></i>
            <% end %>
           </div>
         </div>
      </div>
    <% end %>
  <% end %>
</div>

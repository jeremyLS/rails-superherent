<div class="tabs">
  <%= link_to 'My Bookings', bookings_path %>
  <%= link_to 'My Super Heros', owner_superheroes_path %>
  <%= link_to 'My Validations', owner_bookings_path, class:'tabs active'  %>
</div>

<div class="container-bookings owner-validation">
  <h2>DashBoard</h2>
  <% if @bookings == [] %>
    <h4><%= "You have no validation yet" %></h4>
  <% else %>
    <h4><%= @bookings.count %> pending validation(s)</h4>
    <div id= "list-validation">
      <% @bookings.each do |booking| %>
        <%= render 'shared/container_validation', booking: booking %>
      <% end %>
    </div>
  <% end %>
</div>
